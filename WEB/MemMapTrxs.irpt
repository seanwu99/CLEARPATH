	createTableTrxTags();

	oMatrixD.createRow(oTableTrxTags);
	
       	var oDropdownBox_COMMTYPES = new sap.ui.commons.DropdownBox({
		id : "dbox_commtypes",
		tooltip : 'Transaction Communication Type',
		editable : true,
		width : '230px',
		change: function(oEvent){
		 //alert(oEvent.oSource.getSelectedKey());
		doOnTrxCommTypeChange();
		}
	});

       	var oDropdownBox_TAGSREV = new sap.ui.commons.DropdownBox({
		id : "dbox_tagsrev",
		tooltip : 'Transaction Tag Name',
		editable : true,
		width : '230px',
		change: function(oEvent){
		 //alert(oEvent.oSource.getSelectedKey());
		}
	});

	oMatrixDF.createRow( oDropdownBox_COMMTYPES, oDropdownBox_TAGSREV );

	var oButton6 = new sap.ui.commons.Button({
		id : 'B-AddTag',
		text : 'Add',
		enabled: true
	});
	oButton6.attachPress(doAddTag);

	var oButton7 = new sap.ui.commons.Button({
		id : 'B-DeleteTag',
		text : 'Delete',
		enabled: false
	});
	oButton7.attachPress(doDeleteTag);

	oMatrixDF.createRow( oButton6, oButton7 );

	oMatrixD.createRow( oMatrixDF );

	var oOverlayContainerConnectivity = new sap.ui.ux3.OverlayDialog({openButtonVisible: false});
	oOverlayContainerConnectivity.setHeight('450px');
	oOverlayContainerConnectivity.setWidth('700px');
	oOverlayContainerConnectivity.addContent(oMatrixD);

	// ******************************************************************************************************************************************************************
	function createTableTrxTags() {
		// Bind the table rows to this model
		var timestamp = new Date().getTime();
 		oModelTrxTags.loadData("/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/get_MemMapTrxTags&ts="+timestamp+"&Content-Type=text/xml","",false);
		// alert(oModelTrxTags.getXML());
		createColumnsTrxTags();
		oTableTrxTags.setModel(oModelTrxTags);
		oTableTrxTags.bindRows("/Rowset/Row");
	}

	// ******************************************************************************************************************************************************************
	function updateTableTrxTags() {
		oTableTrxTags.clearSelection();
		var timestamp = new Date().getTime();
 		oModelTrxTags.loadData("/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/get_MemMapTrxTags&Param.1="+oModel.getProperty("recordID", oTable.getContextByIndex(oTable.getSelectedIndex()))+"&Param.2="+oModel.getProperty("revisionID", oTable.getContextByIndex(oTable.getSelectedIndex()))+"&ts="+timestamp+"&Content-Type=text/xml","",false);
		oTableTrxTags.getModel().refresh(true);
	}

	// ******************************************************************************************************************************************************************
	function createColumnsTrxTags() {
		//Define the columns and the control templates to be used
		oTableTrxTags.addColumn(new sap.ui.table.Column({
			label: new sap.ui.commons.Label({text: "recordID"}),
			template: new sap.ui.commons.TextView().bindProperty("text", "recordID"),
			sortProperty: "recordID",
			filterProperty: "recordID",
			width: "0px"
		}));
		oTableTrxTags.addColumn(new sap.ui.table.Column({
			label: new sap.ui.commons.Label({text: "COMMUNICATION TYPE"}),
			template: new sap.ui.commons.TextView().bindProperty("text", "COM_typeName"),
			sortProperty: "COM_typeName",
			filterProperty: "COM_typeName",
			width: "200px"
		}));
		oTableTrxTags.addColumn(new sap.ui.table.Column({
			label: new sap.ui.commons.Label({text: "NAME"}),
			template: new sap.ui.commons.TextView().bindProperty("text", "tagName"),
			sortProperty: "tagName",
			filterProperty: "tagName",
			width: "200px"
		}));
	}

	// ******************************************************************************************************************************************************************
	oTableTrxTags.attachRowSelectionChange(function(oEvent) {
		// Retrieve the selected row
		var selIndex = oTableTrxTags.getSelectedIndex();
		selectedIndex = selIndex;
		if (selIndex  >= 0) {
			oButton6.setEnabled(false);
			oButton7.setEnabled(true);
			// Retrieve the selected row
			var selectedRow = oTableTrxTags.getRows()[selIndex];
			// sap.ui.commons.MessageBox.alert(selectedRow);
			var selectedRowContext = oEvent.getParameter("rowContext");
		} else {
			oButton6.setEnabled(true);
			oButton7.setEnabled(false);
			selectedIndex = -1;
			// alert ("No Selection ..");
		}
	});

	// ******************************************************************************************************************************************************************
	function updateTrxCommTypes() {
		var timestamp = new Date().getTime();
		getData("/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/get_TrxTagTypes&ts="+timestamp+"&Content-Type=text/xml", parseJsonTrxCommTypes);
	
		function parseJsonTrxCommTypes(jsondata){
			oDropdownBox_COMMTYPES.destroyItems();
			for (var i=0; i<jsondata.length; i++){
				//alert(jsondata[i]['recordID'] + '   ' + jsondata[i]['COM_typeName']);
				item_key = jsondata[i]['recordID'];
				item_text = jsondata[i]['COM_typeName'];
				oItem = new sap.ui.core.ListItem({
					key : item_key,
					text : item_text });
				oDropdownBox_COMMTYPES.addItem(oItem);
			}
		}
	          	oDropdownBox_COMMTYPES.setSelectedKey(1);
	}
	// ******************************************************************************************************************************************************************
	function updateTrxTags() {
		var timestamp = new Date().getTime();
		getData("/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/get_MemMapTags&Param.1="+oModel.getProperty("revisionID", oTable.getContextByIndex(oTable.getSelectedIndex()))+"&Param.2="+oDropdownBox_COMMTYPES.getSelectedKey()+"&ts="+timestamp+"&Content-Type=text/xml", parseJsonTrxTags);
	
		function parseJsonTrxTags(jsondata){
			oDropdownBox_TAGSREV.destroyItems();
			for (var i=0; i<jsondata.length; i++){
				//alert(jsondata[i]['recordID'] + '   ' + jsondata[i]['tagName']);
				item_key = jsondata[i]['recordID'];
				item_text = jsondata[i]['tagName'];
				oItem = new sap.ui.core.ListItem({
					key : item_key,
					text : item_text });
				oDropdownBox_TAGSREV.addItem(oItem);
			}
		}
          		oCore.byId("dbox_tagsrev").setSelectedKey(0);
	}
	// ******************************************************************************************************************************************************************
	function doOnTrxCommTypeChange() {
		updateTrxTags();
	}
	// ******************************************************************************************************************************************************************
	function doOnConfigureTagsClick() {
		if(!oOverlayContainerConnectivity.isOpen()){
			updateTableTrxTags(); 
			oTableTrxTags.clearSelection();
	          		oDropdownBox_COMMTYPES.setSelectedKey(1);
			updateTrxTags();
			oOverlayContainerConnectivity.open();
		}
	}
	// ******************************************************************************************************************************************************************
	function doAddTag() {
		// retrieve values
		var input_tagRecID = oCore.byId("dbox_tagsrev").getSelectedKey();
		var input_trxRecID = oModel.getProperty("recordID", oTable.getContextByIndex(oTable.getSelectedIndex()));
		var input_userNAME = document.getElementById("user_name").value;
		if(!(input_tagRecID>0)) {
			alert("Please Select Transaction Tag Name ..");
			oCore.byId("dbox_tagsrev").focus();
		} else {
			// all good. Try to write them ..
			var Param1 = escapeSQLString(input_tagRecID);
			var Param2 = escapeSQLString(input_trxRecID);
			var Param3 = escapeSQLString(input_userNAME);
			var oReqData;
			if (window.XMLHttpRequest) {
				oReqData = new XMLHttpRequest();
			}
			if (oReqData != null) {
				var timestamp = new Date().getTime();
				var paramStr = "Param.1="+encodeURIComponent(Param1)+"&Param.2="+encodeURIComponent(Param2)+"&Param.3="+encodeURIComponent(Param3);
				// alert(paramStr);
				var queryStr = "/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/add_TrxTag&"+paramStr+"&ts="+timestamp+"&Content-Type=text/xml";
				// alert(queryStr);
				oReqData.open("GET", queryStr, true);
				oReqData.onreadystatechange = function() {
					if (oReqData.readyState == 4)
					if (oReqData.status == 200) {
						// Successful -- rebuild the screen
						updateTableTrxTags();
			          			oCore.byId("dbox_tagsrev").setSelectedKey(0);
					} else {
						alert("Error: " + oReqData.statusText);
					}
				}
				oReqData.send();
			} else {
				window.alert("Error creating XmlHttpRequest object.");
			}
		}
	}
	// ******************************************************************************************************************************************************************
	function doDeleteTag() {
		// Retrieve the selected row
		var Param1 = oModelTrxTags.getProperty("recordID", oTableTrxTags.getContextByIndex(oTableTrxTags.getSelectedIndex()));
       		var oReqData;
      		if (window.XMLHttpRequest) {
     	     		oReqData = new XMLHttpRequest();
      		}
		if (oReqData != null) {
			var timestamp = new Date().getTime();
			var paramStr = "Param.1="+encodeURIComponent(Param1);
			// alert(paramStr);
			var queryStr = "/XMII/Illuminator?QueryTemplate=MESM/MEMMAPTRXS/QUERIES/del_TrxTag&"+paramStr+"&ts="+timestamp+"&Content-Type=text/xml";
			// alert(queryStr);
			oReqData.open("GET", queryStr, true);
			oReqData.onreadystatechange = function() {
				if (oReqData.readyState == 4)
				if (oReqData.status == 200) {
					// Successful -- rebuild the screen
				 	updateTableTrxTags();
		          			oCore.byId("dbox_tagsrev").setSelectedKey(0);
				} else {
					alert("Error: " + oReqData.statusText);
				}
			}
			oReqData.send();
       		} else {
          			window.alert("Error creating XmlHttpRequest object.");
       		}
	}
	// ******************************************************************************************************************************************************************

	</script>
